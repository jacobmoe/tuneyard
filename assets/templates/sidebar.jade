.sidebar-content(ng-class="{'sidebar--open': sidebarOpen}")
  .sidebar-header
    a.fa.u-pullRight(
      ng-click='toggleOpen()'
      class="{{sidebarOpen ? 'fa-angle-left' : 'fa-bars'}}"
      ng-class="unread ? 'u-color--primary' : 'u-color--grey'")
  .sidebar-body(ng-if="sidebarOpen")
    ty-login-form(ng-if='!currentUser')
    ty-chat(ng-if='currentUser')
  .sidebar-footer(ng-show="sidebarOpen")
    input(
      class='ty-chat-input'
      type='text'
      ng-enter='addNewMessage()'
      ng-model='currentMessage'
      placeholder='  (^._.^)ï¾‰  ')

    a.button.u-pullRight(ng-if='currentUser' ng-click='logout()') logout
